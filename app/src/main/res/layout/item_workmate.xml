<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/itemWorkmatePicture"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:contentDescription="@string/workmate_picture"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_account_circle_48"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/itemWorkmateInfos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="@string/item_workmate_infos"
        android:textSize="@dimen/size_default_text_item"
        app:layout_constraintStart_toEndOf="@+id/itemWorkmatePicture"
        app:layout_constraintBottom_toBottomOf="@+id/itemWorkmatePicture"
        app:layout_constraintTop_toTopOf="@+id/itemWorkmatePicture"/>

</androidx.constraintlayout.widget.ConstraintLayout>